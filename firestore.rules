rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId
        || userRole() == 'admin';
    }
    match /requests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.requestedBy.uid == request.auth.uid
        && request.resource.data.status == 'pending'
        && request.resource.data.approvedBy == null
        && request.resource.data.approvalSignature == null
        && request.resource.data.reviewedBy == null;
      allow update: if request.auth != null
        && (
          // --- Reviewer transitions (pending → reviewed | rejected) ---
          // Self-review prevention: reviewer cannot be the requester
          // finance_ops: operations only, finance_prep/admin: all committees
          (
            resource.data.status == 'pending'
            && request.resource.data.status in ['reviewed', 'rejected']
            && request.auth.uid != resource.data.requestedBy.uid
            && (
              (userRole() == 'finance_ops' && resource.data.committee == 'operations')
              || userRole() in ['finance_prep', 'admin']
            )
          )
          // --- Final approver transitions (reviewed → approved | rejected) ---
          // Self-approval prevention: approver cannot be the requester
          // approver_ops: operations only, approver_prep: preparation only, director/admin: all
          || (
            resource.data.status == 'reviewed'
            && request.resource.data.status in ['approved', 'rejected']
            && request.auth.uid != resource.data.requestedBy.uid
            && (
              (userRole() == 'approver_ops' && resource.data.committee == 'operations')
              || (userRole() == 'approver_prep' && resource.data.committee == 'preparation')
              || (userRole() == 'session_director' && resource.data.committee == 'operations')
              || (userRole() == 'logistic_admin' && resource.data.committee == 'preparation')
              || userRole() in ['executive', 'admin']
            )
          )
          // --- Settlement: approved → settled (finance_prep, admin) ---
          || (
            resource.data.status == 'approved'
            && request.resource.data.status == 'settled'
            && userRole() in ['finance_prep', 'admin']
          )
          // --- Force reject: approved → force_rejected (finance_prep, admin) ---
          || (
            resource.data.status == 'approved'
            && request.resource.data.status == 'force_rejected'
            && userRole() in ['finance_prep', 'admin']
          )
          // --- Requester cancel: pending → cancelled (own request only) ---
          || (
            resource.data.requestedBy.uid == request.auth.uid
            && resource.data.status == 'pending'
            && request.resource.data.status == 'cancelled'
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
          )
        );
    }
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && userRole() in ['admin', 'finance_prep'];
    }
    match /settlements/{docId} {
      allow read: if request.auth != null
        && userRole() in ['admin', 'executive', 'session_director', 'logistic_admin', 'finance_prep', 'approver_ops', 'approver_prep'];
      allow write: if request.auth != null
        && userRole() in ['admin', 'finance_prep'];
    }
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null
        && (
          userRole() == 'admin'
          || (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberUids'])
            && request.resource.data.memberUids.hasAll(resource.data.memberUids)
            && request.resource.data.memberUids.size() == resource.data.memberUids.size() + 1
            && request.auth.uid in request.resource.data.memberUids
          )
        );
      allow create: if request.auth != null
        && userRole() == 'admin';
      allow delete: if request.auth != null
        && userRole() == 'admin';
    }
  }
}
